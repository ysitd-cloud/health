table {
  width: 100%
  display: table
  border-collapse: collapse
  border-spacing: 0

  > thead {
    border-bottom: 1px solid #d0d0d0
  }

  td, th {
    padding: 15px 5px
    display: table-cell
    text-align: left
    vertical-align: middle
    border-radius: 2px
  }

  &,th, td {
    border: none
  }
}
